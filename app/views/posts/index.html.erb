<p id="notice"><%= notice %></p>
<div class="pull-right">
<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</div>
<div class="row"><!-- row 1 --> 
  <div class="col-md-6">  
    <form role="search" class="form-inline">
        <div class="form-group">
          <%= search_form_for @q, url: posts_path, html: { method: :post } do |f| %>
         <span><input type="text" class="form-control" placeholder="Search Blog" <%= f.search_field :title_or_tags_cont %>
          </span>
        <button type="submit" class="btn btn-danger">Submit</button>
        </div>
        <% end %>
      </form>
    <% @posts.each do |post| %>
    
        
        <h3><%= link_to "#{post.title}", post %></h3>
        <div><small>uploaded <%= time_ago_in_words(post.created_at) %> ago</small></div>
        <div class="tags">tags: <%= post.tags %></div>
        <span><strong>Post #</span>
        <%= post.id %></strong>
        </p>
        <p>
        <span><strong>Released</strong></span>
        <%= post.created_at %>
        </p>
        <p><%= truncate(post.body, length: 250, omission: "...(continued)") %></p>       
        <p><%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <hr>
      
    <% end %>

<br>
  </div><!-- col1 -->
  <div class="col-md-6">

  </div>
</div> <!-- row 1 -->


