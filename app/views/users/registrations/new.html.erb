<h2>Member Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <input type="text" class="form-control" placeholder="Email"
    <%= f.email_field :email, autofocus: true %></input>
  <br>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <input type="text" class="form-control" placeholder="Password"
    <%= f.password_field :password, autocomplete: "off" %></input>
  <br>

    <input type="text" class="form-control" placeholder="Password Confirmation"
    <%= f.password_field :password_confirmation, autocomplete: "off" %></input>
  <br>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
